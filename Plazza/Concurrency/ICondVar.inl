template <class Rep, class Period>
void ICondVar::WaitFor(
    IMutex& mutex,
    const std::chrono::duration<Rep, Period>& relTime
)
{
    this->DoWaitFor(
        mutex,
        std::chrono::duration_cast<std::chrono::milliseconds>(relTime)
    );
}

